{% if item.retries is defined %}retries={{item.retries}}{% endif %}
{% if item.throttle is defined %}throttle={{item.throttle}}{% endif %}
{% if item.bandwidth is defined %}bandwidth={{item.bandwidth}}{% endif %}
{% if item.sslcacert is defined %}sslcacert={{item.sslcacert}}{% endif %}
